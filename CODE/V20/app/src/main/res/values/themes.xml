<resources xmlns:tools="http://schemas.android.com/tools" tools:ignore="ResourceCycle">
    <!-- Base application theme. -->
    <style name="Base.Theme.V20" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="fontFamily">@font/montserrat</item>

    </style>

    <style name="Theme.V20" parent="Base.Theme.V20"/>

    <style name="Widget.AppCompat.EditText" parent="Widget.AppCompat.EditText" tools:ignore="ResourceCycle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <style name="CustomBottomNavigationItemTextActive" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/laranjaPrimario</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="CustomBottomNavigationItemTextInactive" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="Widget.AppCompat.TextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="RelativeLayoutStyle">
        <item name="android:background">@color/white</item>
        <item name="android:padding">30dp</item>
    </style>

    <style name="InputTextStyle">
        <item name="boxStrokeColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="hintTextColor">@color/black</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
    </style>
</resources>